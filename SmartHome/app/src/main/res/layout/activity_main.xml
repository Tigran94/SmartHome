<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@mipmap/first"
    tools:context="com.example.tiko.smarthome.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Light"
        android:id="@+id/btnLight"
        android:textColor="#94CFE8"
        android:layout_alignParentTop="true"
        android:textSize="25dp"
        android:background="@android:color/transparent"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Window"
        android:id="@+id/btnWindow"
        android:textSize="25dp"
        android:textColor="#94CFE8"
        android:background="@android:color/transparent"
        android:layout_alignBottom="@+id/btnLight"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Curtain"
        android:textSize="25dp"
        android:textColor="#94CFE8"
        android:background="@android:color/transparent"
        android:id="@+id/btnCurtain"
        android:layout_below="@+id/btnLight"
        android:layout_marginTop="43dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sofa"
        android:background="@android:color/transparent"
        android:id="@+id/btnSofa"
        android:textSize="25dp"
        android:textColor="#94CFE8"
        android:layout_alignBottom="@+id/btnCurtain"
        android:layout_alignStart="@+id/btnWindow" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Config"
        android:textColor="#94CFE8"
        android:id="@+id/btnConfig"
        android:textSize="25dp"
        android:background="@android:color/transparent"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:textColor="#94CFE8"
        android:background="@android:color/transparent"
        android:id="@+id/btnExit"
        android:textSize="25dp"
        android:layout_alignTop="@+id/btnConfig"
        android:layout_alignStart="@+id/btnSofa" />
</RelativeLayout>
